---
const { title = "New Bridge Homes For Sale", description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={Astro.props.description || "Find your dream home in New Bridge - luxury properties, townhomes, and family residences in a beautiful planned community."} />
    <meta name="keywords" content="real estate, homes for sale, new bridge, luxury homes, property listings" />
    <meta name="author" content="New Bridge Homes" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={Astro.props.description || "Find your dream home in New Bridge - luxury properties, townhomes, and family residences in a beautiful planned community."} />
    <meta property="og:image" content="/images/og-image.jpg" />
    <meta property="og:url" content="https://newbridgehomesforsale.com" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="canonical" href={`https://newbridgehomesforsale.com${Astro.url.pathname}`} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>
    <!-- Styles -->
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/team.css">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Raleway:wght@400;500;700&display=swap" rel="stylesheet" />
    <script src="https://em.realscout.com/widgets/realscout-web-components.umd.js" type="module"></script>
    <style>
      realscout-office-listings {
        --rs-listing-divider-color: rgb(101, 141, 172);
        width: 100%;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <div class="logo">
          <a href="/">New Bridge Homes</a>
        </div>
        <button id="mobile-menu-toggle" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
        <nav>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/listings">Listings</a></li>
            <li><a href="/team">Our Team</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="container">
        <div class="footer-content">
          <div class="footer-logo">
            <h3>New Bridge Homes</h3>
            <p>Exceptional properties in beautiful communities</p>
          </div>
          <div class="footer-links">
            <h4>Quick Links</h4>
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/listings">Properties</a></li>
              <li><a href="/about">About</a></li>
              <li><a href="/contact">Contact</a></li>
            </ul>
          </div>
          <div class="footer-contact">
            <h4>Contact Us</h4>
            <p>123 Real Estate Way</p>
            <p>New Bridge, CA 92000</p>
            <p>Phone: (555) 123-4567</p>
            <p>Email: info@newbridgehomes.com</p>
          </div>
        </div>
        <div class="copyright">
          <p>&copy; 2025 New Bridge Homes. All rights reserved.</p>
        </div>
      </div>
    </footer>
    <script is:inline src="/scripts/main.js"></script>
  </body>
</html>