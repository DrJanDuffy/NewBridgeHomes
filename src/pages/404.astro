---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Page Not Found | New Bridge Homes">
  <section class="error-page">
    <div class="container">
      <div class="error-content">
        <h1>404</h1>
        <h2>Page Not Found</h2>
        <p>The page you're looking for doesn't exist or has been moved.</p>
        <div class="error-actions">
          <a href="/" class="btn btn-primary">Return Home</a>
          <a href="/listings" class="btn btn-secondary">View Properties</a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .error-container {
    text-align: center;
    padding: 6rem 0;
    margin: 0 auto;
    max-width: 800px;
  }
  
  h1 {
    font-size: 6rem;
    color: var(--color-primary);
    margin-bottom: 0;
  }
  
  h2 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }
  
  p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }
  
  .btn {
    display: inline-block;
  }
</style>