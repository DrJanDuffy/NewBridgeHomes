
---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { SEO } from 'astro-seo';

// SEO-optimized real estate keywords for Las Vegas market
const keywords = [
  "Las Vegas luxury realtor",
  "Henderson Nevada homes for sale",
  "55+ communities Las Vegas",
  "Summerlin real estate expert",
  "California to Las Vegas relocation",
  "investment properties Nevada",
  "North Las Vegas REALTOR",
  "Berkshire Hathaway real estate agent"
];

// Define Dr. Jan Duffy's information with structured data-friendly format
const teamMember = {
  "@type": "RealEstateAgent",
  name: "Dr. Jan Duffy",
  jobTitle: "Licensed REALTOR®",
  license: "S.0197614.LLC",
  worksFor: {
    "@type": "RealEstateOrganization",
    name: "Berkshire Hathaway HomeServices Nevada Properties",
    url: "https://www.bhhsnv.com/"
  },
  description: "Dr. Jan Duffy is a dedicated REALTOR® with Berkshire Hathaway HomeServices Nevada Properties, specializing in luxury properties, investment opportunities, and 55+ communities throughout Las Vegas, Henderson, and Summerlin.",
  expertise: "Luxury Real Estate Specialist • Investment Property Expert",
  mainEntityOfPage: new URL(Astro.url.pathname, Astro.site).toString(),
  knowsAbout: [
    "Luxury Real Estate Transactions",
    "55+ Community Properties",
    "Las Vegas Real Estate Market",
    "California to Nevada Relocations",
    "First-Time Home Buyer Guidance",
    "New Construction Sales",
    "Property Valuation and Market Analysis"
  ],
  areaServed: [
    {
      "@type": "City",
      name: "Las Vegas"
    },
    {
      "@type": "City",
      name: "Henderson"
    },
    {
      "@type": "City",
      name: "North Las Vegas"
    },
    {
      "@type": "City",
      name: "Summerlin"
    },
    {
      "@type": "City",
      name: "Aliante"
    },
    {
      "@type": "City",
      name: "Centennial Hills"
    },
    {
      "@type": "City",
      name: "Tule Springs"
    }
  ],
  serviceAreas: ["Las Vegas", "Henderson", "North Las Vegas", "Summerlin", "Aliante", "Centennial Hills", "Tule Springs"],
  telephone: "(702) 500-1955",
  email: "drjanduffy@bhhsnv.com",
  calendlyUrl: "https://calendly.com/drjanduffy",
  image: {
    "@type": "ImageObject",
    url: "/images/team/jan-duffy.jpg",
    width: 800,
    height: 800,
    caption: "Dr. Jan Duffy, Licensed REALTOR® with Berkshire Hathaway HomeServices Nevada Properties",
    contentUrl: "/images/team/jan-duffy.jpg"
  },
  sameAs: [
    "https://linkedin.com/in/drjanduffy",
    "https://facebook.com/drduffyrealtorhenderson"
  ]
};

const title = `Meet Dr. Jan Duffy - Las Vegas Luxury Real Estate Expert | BHHS Nevada`;
---

<Layout title={title}>
  <header class="page-header">
    <div class="container">
      <h1>Our Team</h1>
      <p>Meet the experts who will help you find your dream home</p>
    </div>
  </header>

  <main class="team-section">
    <div class="container">
      <div class="team-grid" itemscope itemtype="https://schema.org/RealEstateAgent">
        <div class="team-member">
          <div class="member-image">
            <img src={teamMember.image.url} alt={teamMember.image.caption} width="800" height="800" />
          </div>
          <h3 itemprop="name">{teamMember.name}</h3>
          <div class="member-title" itemprop="jobTitle">{teamMember.jobTitle}</div>
          <div class="license">License: {teamMember.license}</div>
          <div class="company" itemprop="worksFor" itemscope itemtype="https://schema.org/Organization">
            <span itemprop="name">{teamMember.worksFor.name}</span>
          </div>
          
          <div class="member-bio">
            <div class="credentials" itemprop="knowsAbout">{teamMember.expertise}</div>
            <p itemprop="description">{teamMember.description}</p>
            
            <div class="specializations">
              <strong>Areas of Expertise:</strong>
              <ul>
                {teamMember.knowsAbout.map(skill => (
                  <li>{skill}</li>
                ))}
              </ul>
            </div>
            
            <div class="service-areas">
              <strong>Areas Served:</strong>
              <p>{teamMember.serviceAreas.join(", ")}</p>
            </div>
            
            <div class="contact-info">
              <p>
                <strong>Phone:</strong> 
                <a href={`tel:${teamMember.telephone}`} itemprop="telephone">{teamMember.telephone}</a>
              </p>
              <p>
                <strong>Email:</strong> 
                <a href={`mailto:${teamMember.email}`} itemprop="email">{teamMember.email}</a>
              </p>
              <p>
                <strong>Schedule a Consultation:</strong> 
                <a href={teamMember.calendlyUrl} target="_blank" rel="noopener">Book Online</a>
              </p>
              
              <div class="social-links">
                {teamMember.sameAs.map(socialUrl => (
                  <a href={socialUrl} target="_blank" rel="noopener noreferrer" aria-label={`Follow ${teamMember.name} on ${socialUrl.includes('linkedin') ? 'LinkedIn' : 'Facebook'}`}>
                    <i class={`fa fa-${socialUrl.includes('linkedin') ? 'linkedin' : 'facebook'}`}></i>
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  @import "../public/styles/team.css";
  
  .page-header {
    background-color: var(--color-primary);
    color: white;
    padding: 4rem 0 2rem;
    text-align: center;
  }
</style>
