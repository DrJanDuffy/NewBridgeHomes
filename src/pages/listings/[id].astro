
---
import MainLayout from '../../layouts/MainLayout.astro';

// This would normally come from a database or CMS
const properties = [
  {
    id: 'luxury-villa',
    title: 'Luxury Villa',
    price: 750000,
    address: '123 New Bridge Ave',
    beds: 4,
    baths: 3,
    sqft: 2500,
    image: 'https://placehold.co/600x400',
    description: 'Stunning luxury villa with modern amenities, spacious rooms, and beautiful garden. Perfect for families looking for comfort and elegance.'
  },
  {
    id: 'modern-townhouse',
    title: 'Modern Townhouse',
    price: 550000,
    address: '456 New Bridge Blvd',
    beds: 3,
    baths: 2.5,
    sqft: 1800,
    image: 'https://placehold.co/600x400',
    description: 'Contemporary townhouse with open floor plan, high ceilings, and premium finishes. Conveniently located near shops and restaurants.'
  },
  {
    id: 'family-home',
    title: 'Family Home',
    price: 650000,
    address: '789 New Bridge Court',
    beds: 4,
    baths: 3,
    sqft: 2200,
    image: 'https://placehold.co/600x400',
    description: 'Spacious family home in a quiet cul-de-sac. Features include a large backyard, updated kitchen, and comfortable living spaces.'
  },
  {
    id: 'cozy-cottage',
    title: 'Cozy Cottage',
    price: 450000,
    address: '321 New Bridge Lane',
    beds: 2,
    baths: 2,
    sqft: 1500,
    image: 'https://placehold.co/600x400',
    description: 'Charming cottage with character and modern updates. Perfect for first-time buyers or downsizers looking for quality and comfort.'
  },
  {
    id: 'executive-estate',
    title: 'Executive Estate',
    price: 950000,
    address: '555 New Bridge Parkway',
    beds: 5,
    baths: 4.5,
    sqft: 3800,
    image: 'https://placehold.co/600x400',
    description: 'Impressive executive home with luxury finishes, gourmet kitchen, home theater, and resort-style backyard with pool.'
  },
  {
    id: 'downtown-condo',
    title: 'Downtown Condo',
    price: 350000,
    address: '888 New Bridge Center',
    beds: 2,
    baths: 2,
    sqft: 1200,
    image: 'https://placehold.co/600x400',
    description: 'Modern condo in the heart of downtown. Features include floor-to-ceiling windows, balcony with views, and secure parking.'
  }
];

export function getStaticPaths() {
  return properties.map(property => ({
    params: { id: property.id },
    props: { property },
  }));
}

const { property } = Astro.props;
---

<MainLayout title={`${property.title} | New Bridge Homes`}>
  <section class="property-detail-hero">
    <div class="container">
      <a href="/listings" class="back-link">&larr; Back to Listings</a>
      <div class="property-detail-container">
        <div class="property-detail-image">
          <img src={property.image} alt={property.title} />
        </div>
        <div class="property-detail-info">
          <h1>{property.title}</h1>
          <p class="price">${property.price.toLocaleString()}</p>
          <p class="address">{property.address}</p>
          <div class="property-features">
            <span>{property.beds} Beds</span>
            <span>{property.baths} Baths</span>
            <span>{property.sqft.toLocaleString()} sqft</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="property-description-section">
    <div class="container">
      <div class="property-detail-grid">
        <div class="property-detail-content">
          <h2>Description</h2>
          <p>{property.description}</p>
          
          <h2>Property Features</h2>
          <ul class="features-list">
            <li>Modern kitchen with stainless steel appliances</li>
            <li>Open floor plan</li>
            <li>Hardwood floors</li>
            <li>Central heating and air conditioning</li>
            <li>Attached two-car garage</li>
            <li>Private backyard</li>
          </ul>
          
          <h2>Location</h2>
          <p>Located in the desirable New Bridge community, this property is close to schools, parks, shopping, and dining. Easy access to major highways makes commuting a breeze.</p>
        </div>
        
        <div class="property-sidebar">
          <div class="contact-agent">
            <h3>Interested in this property?</h3>
            <p>Fill out the form below and one of our agents will contact you shortly.</p>
            <form class="contact-form">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" required>
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
              </div>
              <div class="form-group">
                <label for="phone">Phone</label>
                <input type="tel" id="phone" name="phone">
              </div>
              <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message" name="message" rows="4"></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .property-detail-hero {
    padding: 3rem 0;
  }
  
  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
  }
  
  .back-link:hover {
    text-decoration: underline;
  }
  
  .property-detail-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .property-detail-image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 3px 10px rgba(0,0,0,0.1);
  }
  
  .property-detail-info h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-dark);
  }
  
  .property-detail-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
  }
  
  .features-list {
    margin-left: 1.5rem;
    margin-bottom: 2rem;
  }
  
  .features-list li {
    margin-bottom: 0.5rem;
  }
  
  .contact-agent {
    background-color: var(--color-light);
    padding: 2rem;
    border-radius: 8px;
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }
  
  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-family: var(--font-body);
  }
  
  .contact-form .btn {
    width: 100%;
  }
  
  .property-description-section {
    padding-bottom: 4rem;
  }
  
  @media (max-width: 768px) {
    .property-detail-container,
    .property-detail-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
