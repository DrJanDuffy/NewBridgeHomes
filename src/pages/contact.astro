
---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Contact Us | New Bridge Homes">
  <section class="page-header">
    <div class="container">
      <h1>Contact New Bridge Homes</h1>
    </div>
  </section>

  <section class="contact-section">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-form-container">
          <h2>Get In Touch</h2>
          <p>Fill out the form below and one of our representatives will get back to you as soon as possible.</p>
          
          <form class="contact-form">
            <div class="form-group">
              <label for="name">Full Name</label>
              <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" id="email" name="email" required>
            </div>
            
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="tel" id="phone" name="phone">
            </div>
            
            <div class="form-group">
              <label for="interest">I'm interested in</label>
              <select id="interest" name="interest">
                <option value="buying">Buying a home</option>
                <option value="selling">Selling my property</option>
                <option value="info">General information</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="message">Your Message</label>
              <textarea id="message" name="message" rows="5" required></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary">Send Message</button>
          </form>
        </div>
        
        <div class="contact-info">
          <div class="info-card">
            <h3>Office Location</h3>
            <p>123 Real Estate Way<br>New Bridge, CA 92000</p>
            
            <h3>Contact Information</h3>
            <p>Phone: (555) 123-4567<br>Email: info@newbridgehomes.com</p>
            
            <h3>Office Hours</h3>
            <p>Monday - Friday: 9am - 6pm<br>Saturday: 10am - 4pm<br>Sunday: Closed</p>
          </div>
          
          <div class="map-container">
            <img src="https://placehold.co/600x400" alt="Map to New Bridge Homes Office" class="contact-map">
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .contact-section {
    padding: 4rem 0;
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }
  
  .contact-form-container h2 {
    color: var(--color-primary);
    margin-bottom: 1rem;
  }
  
  .contact-form-container p {
    margin-bottom: 2rem;
  }
  
  .contact-form {
    background-color: var(--color-light);
    padding: 2rem;
    border-radius: 8px;
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }
  
  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-family: var(--font-body);
  }
  
  .form-group textarea {
    resize: vertical;
  }
  
  .info-card {
    background-color: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    margin-bottom: 2rem;
  }
  
  .info-card h3 {
    color: var(--color-primary);
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }
  
  .info-card h3:first-child {
    margin-top: 0;
  }
  
  .map-container {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 3px 10px rgba(0,0,0,0.1);
  }
  
  .contact-map {
    width: 100%;
    height: auto;
    display: block;
  }
  
  @media (max-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
    
    .info-card {
      order: -1;
    }
  }
</style>
